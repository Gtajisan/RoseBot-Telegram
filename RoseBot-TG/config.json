{
  "bot": {
    "name": "Rose Bot",
    "version": "2.0.0",
    "description": "Professional modular Telegram bot"
  },
  "database": {
    "type": "sqlite",
    "path": "data/rose.db",
    "autoCreate": true
  },
  "api": {
    "port": 3000,
    "enabled": true
  },
  "logging": {
    "level": "INFO",
    "showTimestamp": true
  },
  "features": {
    "eventBus": true,
    "multiLanguage": true,
    "adminManagement": true,
    "userTracking": true,
    "statistics": true
  }
}
